<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alert_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:transitionName="alert_card_transition"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/md3_surfaceContainerHighest">

    <RelativeLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Threat icon -->
        <ImageView
            android:id="@+id/image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher"/>

        <LinearLayout
            android:gravity="start"
            android:paddingEnd="20dp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/alertTitle"
                android:textColor="@color/md3_onSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="6dp"
                android:text="@string/placeHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/alertDesc"
                android:textColor="@color/md3_onSurfaceVariant"
                android:textSize="14sp"
                android:lineSpacingExtra="1dp"
                android:layout_marginBottom="4dp"
                android:text="@string/placeHolder"
                android:gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/time"
                android:textColor="@color/md3_onSurfaceVariant"
                android:ellipsize="end"
                android:textSize="12sp"
                android:alpha="0.7"
                android:singleLine="true"
                android:text="@string/placeHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>





